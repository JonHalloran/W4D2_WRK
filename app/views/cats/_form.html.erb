<% if type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_value = 'Update Cat' %>
<% elsif type == :new %>
  <% action_url = cats_url %>
  <% button_value = 'Create Cat' %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  
  <p>Name:
    <input id="name" type="text" name="cat[name]" value= "<%= cat.name %>"/>
  </p>

  <p>Color:
    <select name="cat[color]">
      <option disabled selected>Please choose a color</option>
      <% Cat::COLORS.each do |color| %>
        <option value="<%= color %>" <%= cat.color == color ? "selected" : "" %>>
          <%= color %></option>
      <% end %>
    </select>
  </p>

  <p>Gender:
    <input type="radio" id="male"
     name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>>
    <label for="male">M</label>

    <input type="radio" id="female"
     name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>>
    <label for="female">F</label>
  </p>

  <p>Birthday:
    <input id="birthdate" type="date" name="cat[birth_date]" value= "<%= cat.birth_date %>"/>
  </p>

  <p>Description:
    <textarea name="cat[description]"><%= cat.description %></textarea>
  </p>

  <button type="submit" name="button"><%= button_value %></button>
</form>
